vx<-function(k) { suma <- 0.0
  z<-length(k)
  for(i in 1:z){
    suma = suma + k[i]
    media = suma/z # Obtener la media aritmetica del vector
    for(i in 1:z){
      vx<-k[i]-media
      vx<-(vx)/z
    }
  } 
  return(vx) 
}
k <- c(2,3,4)
(vx(k))
